{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel événement{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4">
        <h1 class="font-bold text-2xl pb-6">Créer un nouvel événement</h1>
        
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        
        <div class="mb-4">
            {{ form_row(form.name, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
        </div>
        
        <div class="mb-4">
            {{ form_row(form.dateBegin, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
        </div>
        
        <div class="mb-4">
            {{ form_row(form.dateEnd, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded'}}) }}
        </div>
        
        <div class="mb-4">
            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Créer
            </button>
        </div>
        
        {{ form_end(form) }}
    </div>
{% endblock %}